    <div id="page-container" style="
        display: flex;
        width: 100vw;
        height: 100vh;
        margin-top: 4em;
        border: 2px black;

      ">

      <%#- JSON.stringify(locals) %>

        <div id="leftsidebar" style="
          display: flex;
					flex-direction: column;
          flex-grow: 100;
          max-width: 15vw;
          margin: 0;">

          <% for( let item of items.categories ) { %>


            <div style="
				display: flex;
				justify-content: center;
				background-color:#28a745;
				margin: 5px;
				padding: 5px;
				border: solid 2px black;
        color:white ;
        font-weight: bold;">

              <a href='/m/<%= item.id %>'>
                <%= item.name %>
              </a>

            </div>
            <% } %>
        </div>




        <div id="content" style="
				 width: 60vw;
				 margin: 0;
				  display: flex;
          justify-content: center;
					flex-wrap: wrap;
					align-content:flex-start">

          <% for( let item of items.foodItem ) { %>
            <div class="foodItem" style="
            border: solid 5px rgb(119, 202, 126);
            padding: 10px;
            margin: 5px;
            min-width: 20%;
             max-width: 30%;
             overflow-wrap: break-word;
             ">

              <h3>
                <%= item.title %>
              </h3>
              <%= item.description %>
                <b> [$<%= item.price/100 %>] </b>
                <!-- [ <%#= item.url %> ]
              [ <%#= item.catid %> ]
              -->

                <img src="<%= item.url %>" class="img-thumbnail" alt="...">

                <button class="addItem btn btn-outline-success far fa-plus-square" id="item_<%- item.id %>"
                  data-id="<%= item.id %>" data-title="<%= item.title %>" data-desc="<%= item.description %>"
                  data-price="<%=item.price %>"></button>

                <button class="delItem btn btn-outline-danger far fa-minus-square" id="item_<%- item.id %>"
                  data-id="<%= item.id %>" data-title="<%= item.title %>" data-description="<%= item.description %>"
                  data-price="<%=item.price %>"></button>

            </div>

            <% } %>

        </div>

        <div style="max-width: 25vw; margin: 0;">


          <div style="font-weight: bold; font-size: 1.5em">My Order</div>

          <div id="rightbar"></div>


          <div style="
			display: flex;
			flex-direction: column;
			align-items: end;
			padding-right: 10px;

			">
            <!-- <div style = "text-align: right;">subtotal: 100</div>
            <div>hst:13</div>
            <div style= "font-weight: bold;">TOTAL:113</div> -->

          </div>
        </div>



        <!-- Modal -->
        <div class="modal fade" id="cartModal" tabindex="-1" role="dialog" aria-labelledby="cartModalLabel"
          aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="cartModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                ...


                <form class="form" action="/orders/new" method="POST">

                  <div class="input-group form-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="fas fa-at"></i></span>
                    </div>
                    <input type="text" class="form-control" name="username" placeholder="john@smith.com">
                  </div>

                  <div class="input-group form-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="fas fa-key"></i></span>
                    </div>
                    <input type="password" class="form-control" name="password" placeholder="password">
                  </div>

                  <div class="form-group">
                    <input type="submit" value="Place Order" class="btn float-right login_btn" onclick="submitOrder()">
                  </div>


                </form>


              </div>
            </div>
          </div>
        </div>



